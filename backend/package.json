{
  "name": "erp-warteg-backend",
  "version": "1.0.0",
  "description": "Backend API for ERP Warteg system",
  "main": "src/server.js",
  "scripts": {
    "start": "npx prisma generate && node src/server.js",
    "dev": "npx prisma generate && nodemon src/server.js",
    "build": "echo 'No build step needed for backend'",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "node prisma/seeders/seed.js",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1"
  },
  "keywords": [
    "warteg",
    "erp",
    "express",
    "prisma",
    "postgresql"
  ],
  "author": "ERP Warteg Team",
  "license": "MIT"
}
